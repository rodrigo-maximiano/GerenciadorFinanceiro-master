<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SGF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cadastrarNovaContaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cadastrarNovaConta"
            android:text="@string/cadastrar_nova_conta"
            tools:ignore="OnClick"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="4dp" />

        <Button
            android:id="@+id/operacoesButton"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:text="Operações" />

        <Button
            android:id="@+id/relatorioButton"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:text="Relatórios" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total do saldo de todas as contas:" />

        <TextView
            android:id="@+id/saldoTotalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>